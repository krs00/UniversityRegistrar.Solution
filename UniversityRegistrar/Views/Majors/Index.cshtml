@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>All Majors!</h1>

@if (@Model.Count == 0)
{
  <h3>No majors have been added yet.</h3>
}
else
{
  <ul>
  @foreach (Major major in Model)
    {
      <li>@Html.ActionLink($"{major.Name}", "Details", new { id = major.MajorId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a major", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>