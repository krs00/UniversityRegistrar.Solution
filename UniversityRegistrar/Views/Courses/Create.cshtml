@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h2>Add a course to the registrar</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)

  <input type="submit" value="Add new course"/>
}

<p>@Html.ActionLink("View all courses", "Index")</p>