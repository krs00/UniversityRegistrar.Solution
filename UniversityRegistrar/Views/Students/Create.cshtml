@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Add a student to the registrar</h2>
<br>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  <br>
  <br>

  @Html.LabelFor(model => model.DOE)
  @Html.TextBoxFor(model => model.DOE, new { type = "date"})

  <br>
  <br>

  @* @Html.LabelFor(model =>  )
  @Html.DropDownList() *@

  <input type="submit" value="Add new student"/>
}
<br>

<h3>@Html.ValidationMessageFor(model => model.Name, "", new { @style = "color: Red;" })</h3>
<h3>@Html.ValidationMessageFor(model => model.DOE, "", new { @style = "color: Red;" })</h3>
<p>@Html.ActionLink("View all students", "Index")</p>